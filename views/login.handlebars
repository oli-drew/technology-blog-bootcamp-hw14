
<div class="container-flex">
  <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signup" type="button" role="tab" aria-controls="signup" aria-selected="false">Signup</button>
    </li>
  </ul>
  {{!-- Login form --}}
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
      <div class="row m-4 justify-content-center">
        <div class="col-md-6">
          <h2>Login</h2>
          <form class="form login-form">
            <div class="form-group">
              <div class="input-group mb-3">
                <span class="input-group-text" id="email">Email</span>
                <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email" id="email-login">
              </div>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="password">Password</span>
              <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password" id="password-login">
            </div>
            <div class="form-group">
              <button class="btn btn-secondary" type="submit">login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    {{!-- Sign up form --}}
    <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">
      <div class="row m-4 justify-content-center">
        <div class="col-md-6">
          <h2>Signup</h2>
          <form class="form signup-form">
            <div class="form-group">
              <div class="input-group mb-3">
                <span class="input-group-text" id="username">Username</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="username" aria-describedby="username" id="name-signup" maxlength="50">
              </div>
            </div>
            <div class="form-group">
              <div class="input-group mb-3">
                <span class="input-group-text" id="email-signup-label">Email</span>
                <input type="text" class="form-control" placeholder="Email" aria-label="email-signup-label" aria-describedby="email-signup-label" id="email-signup" maxlength="100">
              </div>
            </div>
            <div class="form-group">
              <div class="input-group mb-3">
                <span class="input-group-text" id="password-signup-label">Password</span>
                <input type="password" class="form-control" placeholder="Password" aria-label="password-signup-label" aria-describedby="password-signup-label" id="password-signup" maxlength="254">
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-secondary" type="submit">signup</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
